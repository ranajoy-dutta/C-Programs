//PROGRAM TO IMPLEMENT SELECTION FORT

#include<stdio.h>
#include<conio.h>

void selection_sort (int[],int);
int min_ele(int[],int,int);
void main()
{
	int a[50],i,n;
	clrscr();
	printf("\nSelection Sort by Ankit Verma");
	printf("\nEnter Number Of Elements: ");
	scanf("%d",&n);
	printf("\nEnter Elements:\n");
	for(i=0;i<n;i++)
	{
		scanf("%d",&a[i]);    }
	selection_sort(a,n);
	printf("\nSorted Elements Are:");
	for(i=0;i<n;i++)
	{
		printf("\n%d",a[i]);   }
	getch();  }
void selection_sort(int a[],int n)
{
	int i=0,loc=0,temp=0;
	for(i=0;i<n;i++)
	{
		loc=min_ele(a,i,n);
		temp=a[loc];
		a[loc]=a[i];
		a[i]=temp;    }   }
int min_ele (int a[],int lb,int ub)
{         int min=lb;
	while (lb < ub)
	{
		if(a[lb]<a[min])
			min=lb;
		lb++;   }
	return min;  }
